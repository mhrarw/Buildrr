<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Onboarding3Fragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/onboarding3"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:text="Pantau Progress"
        android:textColor="@color/blue1"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinssemibold"
        android:gravity="center"
        android:text="Pantau progress pembangunan dimanapun kamu berada"
        android:textColor="@color/blue1"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_masuk"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:elevation="0dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/blue1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_daftar"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:elevation="0dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/blue1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textColor="@color/blue1"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        >

    </TextView>
    </com.google.android.material.card.MaterialCardView>





</RelativeLayout>